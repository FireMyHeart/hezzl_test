{
	"info": {
		"_postman_id": "203d64d1-0490-4fd4-85e8-a92b0fc841a4",
		"name": "Hezzl LOGIN",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "26370113"
	},
	"item": [
		{
			"name": "CheckLogin",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 200ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(200);\r",
							"});\r",
							"\r",
							"var value = pm.response.json().accessToken;\r",
							"postman.setEnvironmentVariable(\"accessToken\", value);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"login\": \"{{email}}\",\r\n    \"type\": \"email\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/auth/v1/game/{{campaignId}}/check-login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"v1",
						"game",
						"{{campaignId}}",
						"check-login"
					]
				}
			},
			"response": []
		},
		{
			"name": "ConfirmCode",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 200ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(200);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "{{accessToken}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"code\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/auth/v1/game/{{campaignId}}/confirm-code",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"v1",
						"game",
						"{{campaignId}}",
						"confirm-code"
					]
				}
			},
			"response": []
		}
	]
}